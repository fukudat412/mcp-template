PORT=3000
API_KEY=your-api-key-here
LOG_LEVEL=info
NODE_ENV=development

{% if cookiecutter.include_llm_integration == "openai" %}
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
{% endif %}
{% if cookiecutter.include_llm_integration == "claude" %}
# Claude Configuration
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229
{% endif %}
{% if cookiecutter.include_database == "postgresql" %}
# PostgreSQL Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/{{ cookiecutter.project_slug.replace('-', '_') }}
{% endif %}
{% if cookiecutter.include_database == "sqlite" %}
# SQLite Configuration
DATABASE_PATH=./data/{{ cookiecutter.project_slug }}.db
{% endif %}
{% if cookiecutter.include_monitoring == "y" %}
# Monitoring Configuration
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
{% endif %}